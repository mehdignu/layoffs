{% extends 'base.html.twig' %}

{% block title %}Feed layoffs{% endblock %}
        {% block stylesheets %}

            <style>

                .card {
                    margin: 0 auto; /* Added */
                    float: none; /* Added */
                    margin-bottom: 10px; /* Added */
                    width: fit-content;
                }

                .card-img-top {
                    width: 150px;
                    height: 150px;
                    object-fit: cover;
                    border-radius: 50%;
                    margin-left: auto;
                    margin-right: auto;
                    margin-top: 10px;
                }

                .social a {
                    padding-right: 15px;
                }

                .cards {
                    padding-top: 20px;
                }

                .header {
                    font-family: 'Baloo Paaji 2', cursive;
                    font-size: 45px;
                }

                .subheader {
                    font-family: 'Baloo Paaji 2', cursive;
                    font-size: 25px;
                }


            </style>

        {% endblock %}

{% block body %}

    <div class="row">
        <div class="col-12 mx-auto">
            <div class="text-center">
                <span class="header">Hire Talents affected by recent layoffs</span><br>
                <span class="subheader">(Only Germany at the moment)</span>
            </div>
        </div>
    </div>
    <hr>

    {% if layoffs %}
        <div class="cards">
            {% for layoff in layoffs %}

                <div class="card col-lg-6 col-md-6 col-sm-12 col-xs-12">

                    {% if layoff.picture %}
                        <img src="{{ asset('uploads/pictures/' ~ layoff.picture) }}" class="card-img-top rounded-circle"
                             alt="{{ layoff.name }}">

                    {% else %}
                        <img src="{{ asset('uploads/default/user.png') }}" class="card-img-top rounded-circle"
                             alt="{{ layoff.name }}">
                    {% endif %}

                    <div class="card-body">
                        <h5 class="card-title">{{ layoff.name }}</h5>
                        <p class="card-text">{{ layoff.about }}</p>
                    </div>

                    <div class="card-body social">

                        {% if layoff.linkedin %}
                            <a href="{{ layoff.linkedin }}" target="_blank" class="fa fa-linkedin"></a>
                        {% endif %}

                        {% if layoff.xing %}
                            <a href="{{ layoff.xing }}" target="_blank" class="fa fa-xing"></a>
                        {% endif %}

                        {% if layoff.phone %}
                            <a href="tel:{{ layoff.phone }}" target="_blank" class="fa fa-phone"></a>
                        {% endif %}

                        {% if layoff.portfolio %}
                            <a href="{{ layoff.portfolio }}" target="_blank" class="fa fa-globe"></a>
                        {% endif %}


                        <button onclick=" window.open('mailto:{{ layoff.email }}', '_blank');
                                " class="btn btn-primary pull-right btn-sm RbtnMargin" type="button">Contact
                        </button>
                    </div>

                </div>
            {% endfor %}
           
        </div>




    {% else %}
        <p>No Feed to display</p>
    {% endif %}
{% endblock %}



 {% block javascripts %}
     <script>
         function onSuccess(googleUser) {
             console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
         }
         function onFailure(error) {
             console.log(error);
         }
         function renderButton() {
             gapi.signin2.render('my-signin2', {
                 'scope': 'profile email',
                 'width': 240,
                 'height': 50,
                 'longtitle': true,
                 'theme': 'dark',
                 'onsuccess': onSuccess,
                 'onfailure': onFailure
             });
         }
     </script>
     <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>


 {% endblock %}
